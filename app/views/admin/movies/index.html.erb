<h1>映画一覧（管理画面）</h1>

<%= link_to "新しい映画を登録する", new_admin_movie_path, class: "btn btn-success", style: "margin-bottom: 20px;" %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>公開年</th>
      <th>概要</th>
      <th>画像URL</th>
      <th>上映中</th>
      <th>登録日時</th>
      <th>更新日時</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= link_to movie.name, admin_movie_path(movie) %></td>
        <td><%= movie.year %></td>
        <td><%= movie.description %></td>
        <td><%= link_to "画像", movie.image_url, target: "_blank" %></td>
        <td><%= movie.is_showing ? "上映中" : "上映予定" %></td>
        <td><%= movie.created_at %></td>
        <td><%= movie.updated_at %></td>
        <td>
          <%= link_to "編集", edit_admin_movie_path(movie), class: "btn btn-primary" %>
          <%= link_to "削除", admin_movie_path(movie), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


