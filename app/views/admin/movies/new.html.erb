<h1>映画を登録</h1>

<% if flash[:alert] %>
  <div style="color: red;"><%= flash[:alert] %></div>
<% end %>

<%= form_with model: @movie, url: admin_movies_path, local: true do |f| %>
  <div>
    <%= f.label :name, "タイトル" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :year, "公開年" %><br>
    <%= f.number_field :year %>
  </div>

  <div>
    <%= f.label :description, "概要" %><br>
    <%= f.text_area :description, rows: 5 %>
  </div>

  <div>
    <%= f.label :image_url, "画像URL" %><br>
    <%= f.text_field :image_url %>
  </div>

  <div>
    <%= f.label :is_showing, "上映中" %><br>
    <%= f.check_box :is_showing %>
  </div>

  <div>
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= link_to "一覧へ戻る", admin_movies_path %>
